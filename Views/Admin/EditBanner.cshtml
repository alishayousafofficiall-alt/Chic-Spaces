@model website.Models.Banner

@{
    ViewData["Title"] = "Edit Banner";
    var pages = ViewBag.Pages as List<website.Models.PageContent> ?? new List<website.Models.PageContent>();
}
@await Html.PartialAsync("_header")


<h2>Edit Banner</h2>

<form asp-action="EditBanner" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Page" class="form-label"></label>
        <input asp-for="Page" class="form-control" />
        <span asp-validation-for="Page" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ImageUrl" class="form-label">Banner Image URL</label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <div class="mt-2">
                <img src="@Url.Content(Model.ImageUrl)" style="width:150px;" />
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Banners" class="btn btn-secondary">Back to Banners</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@await Html.PartialAsync("_footer")
