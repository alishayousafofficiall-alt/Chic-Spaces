@model IEnumerable<website.Models.Users>
@await Html.PartialAsync("_header")

@{
    ViewBag.Title = "Manage Users";
    var pages = ViewBag.Pages as List<website.Models.PageContent> ?? new List<website.Models.PageContent>();
}

<h2>Users</h2>

@if (Model != null && Model.Any())
{
    <div class="users-table-wrapper">
        <table class="users-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Profile</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Age</th>
                    <th>DOB</th>
                    <th>Gender</th>
                    <th>Postal Address</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>
                            @if (!string.IsNullOrEmpty(user.ProfileImage))
                            {
                                <img src="@user.ProfileImage" alt="Profile" width="50" height="50" class="rounded-circle" />
                            }
                            else
                            {
                                <span>No Image</span>
                            }
                        </td>
                        <td>@user.FirstName @user.LastName</td>
                        <td>@user.Email</td>
                        <td>@user.Age</td>
                        <td>@user.DateOfBirth.ToString("yyyy-MM-dd")</td>
                        <td>@user.Gender</td>
                        <td>@user.PostalAddress</td>
                        <td>@user.Role</td>
                        <td>
                            <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm profile-edit-btn mb-1">Edit</a>
                            <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-sm profile-delete-btn mb-1"
                               onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info text-center">No users found.</div>
}

@await Html.PartialAsync("_footer")

<style>
    /* ================= BODY ================= */
    body {
        background: linear-gradient(135deg, #f4e1d2, #d9bfa1, #e9d4bc);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
        color: #4b3a2f;
    }

    h2 {
        text-align: center;
        margin-top: 30px;
        margin-bottom: 30px;
        font-weight: 700;
        color: #D9A066; /* golden brown heading */
    }

    /* Alert */
    .alert-info {
        text-align: center;
        border-radius: 8px;
        background-color: #8B5E3C; /* brown */
        color: #f0e6dc; /* cream text */
        padding: 12px 20px;
        margin-bottom: 20px;
    }

    /* ================= USERS TABLE ================= */
    .users-table-wrapper {
        max-width: 1200px;
        margin: 0 auto 60px;
        padding: 0 15px;
    }

    /* Table */
    .users-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        background: #ffffff;
        border-radius: 14px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }

        /* Header */
        .users-table thead {
            background: linear-gradient(135deg, #8B5E3C, #5c3a21);
            color: #FFD699;
            font-weight: 600;
        }

            .users-table thead th {
                padding: 14px;
                text-align: center;
            }

        /* Body Rows */
        .users-table tbody tr {
            background-color: #f7f3ee; /* cream row */
            color: #4b3a2f;
            transition: all 0.25s ease;
        }

            .users-table tbody tr:nth-child(even) {
                background-color: #efe6dc; /* soft alternate */
            }

            .users-table tbody tr:hover {
                background-color: #D9A066; /* golden hover */
                color: #3b2614;
            }

        /* Cells */
        .users-table tbody td {
            padding: 12px;
            text-align: center;
            vertical-align: middle;
            border-bottom: 1px solid #e1d3c2;
        }

        /* Last row border fix */
        .users-table tbody tr:last-child td {
            border-bottom: none;
        }

    /* ================= BUTTONS ================= */
    .profile-edit-btn {
        background-color: #8B5E3C;
        color: #fff;
        border-radius: 6px;
        border: none;
        padding: 6px 12px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .profile-edit-btn:hover {
            background-color: #D9A066;
            color: #3b2614;
            box-shadow: 0 5px 15px rgba(217,160,102,0.4);
        }

    .profile-delete-btn {
        background-color: #c62828;
        color: #fff;
        border-radius: 6px;
        border: none;
        padding: 6px 12px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .profile-delete-btn:hover {
            background-color: #e53935;
            color: #fff;
            box-shadow: 0 5px 15px rgba(229,57,53,0.4);
        }
</style>
