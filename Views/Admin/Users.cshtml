@await Html.PartialAsync("_header")
@model IEnumerable<website.Models.Users>
@{
    ViewBag.Title = "Manage Users";
    var pages = ViewBag.Pages as List<website.Models.PageContent> ?? new List<website.Models.PageContent>();
}

<h2>Users</h2>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Profile</th>
            <th>Name</th>
            <th>Email</th>
            <th>Age</th>
            <th>DOB</th>
            <th>Gender</th>
            <th>Postal Address</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>
                        @if (!string.IsNullOrEmpty(user.ProfileImage))
                        {
                            <img src="@user.ProfileImage" alt="Profile" width="50" height="50" class="rounded-circle" />
                        }
                        else
                        {
                            <span>No Image</span>
                        }
                    </td>
                    <td>@user.FirstName @user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.Age</td>
                    <td>@user.DateOfBirth.ToString("yyyy-MM-dd")</td>
                    <td>@user.Gender</td>
                    <td>@user.PostalAddress</td>
                    <td>@user.Role</td>
                    <td>
                        <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-warning mb-1">Edit</a>
                        <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-sm btn-danger mb-1"
                           onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="10" class="text-center">No users found.</td>
            </tr>
        }
    </tbody>
</table>

@await Html.PartialAsync("_footer")
