@model List<website.Models.ContactMessage>
@await Html.PartialAsync("_header")
@{
    var pages = ViewBag.Pages as List<website.Models.PageContent> ?? new List<website.Models.PageContent>();

}
<h2 class="mb-4">Contact Messages</h2>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Subject</th>
                    <th>Message</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var msg in Model)
                {
                    <tr>
                        <td>@msg.Id</td>
                        <td>@msg.Name</td>
                        <td>@msg.Email</td>
                        <td>@msg.Subject</td>
                        <td>@msg.Message</td>
                        <td>@msg.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <h4 class="text-danger">No contact messages found.</h4>
}

@await Html.PartialAsync("_footer")
