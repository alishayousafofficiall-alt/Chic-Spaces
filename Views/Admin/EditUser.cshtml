@model website.Models.Users
@await Html.PartialAsync("_header")

@{
    ViewBag.Title = "Edit User";
}

<div class="edit-user-wrapper">
    <div class="edit-user-page">

        <h2 class="edit-user-title">Edit User</h2>

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success">@ViewBag.Message</div>
        }

        <form asp-action="EditUser" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Age" class="form-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DateOfBirth" class="form-label"></label>
                <input asp-for="DateOfBirth" type="date" class="form-control" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Gender" class="form-label"></label>
                <select asp-for="Gender" class="form-select">
                    <option value="">Select Gender</option>
                    <option value="Male" selected="@Model.Gender == " Male"">Male</option>
                    <option value="Female" selected="@Model.Gender == " Female"">Female</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PostalAddress" class="form-label"></label>
                <textarea asp-for="PostalAddress" class="form-control"></textarea>
                <span asp-validation-for="PostalAddress" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Role" class="form-label"></label>
                <select asp-for="Role" class="form-select">
                    <option value="User" selected="@Model.Role == " User"">User</option>
                    <option value="Admin" selected="@Model.Role == " Admin"">Admin</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ProfileImage" class="form-label">Profile Image</label>
                <input asp-for="ProfileImage" type="file" class="form-control" />
                <span asp-validation-for="ProfileImage" class="text-danger"></span>
                @if (!string.IsNullOrEmpty(Model.ProfileImage))
                {
                    <img src="@Model.ProfileImage" alt="Profile" width="100" class="mt-2 rounded-circle" />
                }
            </div>

            <button type="submit" class="edit-user-btn">Update User</button>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@await Html.PartialAsync("_footer")

<style>
    /* ================= EDIT USER PAGE ================= */
    .edit-user-wrapper {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 40px 15px;
        background: linear-gradient(135deg, #f4e1d2, #d9bfa1, #e9d4bc);
    }

    .edit-user-page {
        width: 100%;
        max-width: 720px;
        padding: 32px;
        background: #fff9f0;
        border-radius: 16px;
        box-shadow: 0 15px 40px rgba(0,0,0,0.12);
        font-family: "Segoe UI", Tahoma, sans-serif;
    }

    .edit-user-title {
        text-align: center;
        font-size: 30px;
        font-weight: 700;
        color: #4a2f1a;
        margin-bottom: 30px;
    }

    /* Inputs */
    .edit-user-page .form-control,
    .edit-user-page .form-select,
    .edit-user-page textarea {
        height: 46px;
        border-radius: 10px;
        border: 1px solid #cbb299;
        padding: 10px 14px;
        font-size: 14px;
    }

    .edit-user-page textarea {
        min-height: 90px;
        height: auto;
    }

        .edit-user-page .form-control:focus,
        .edit-user-page .form-select:focus,
        .edit-user-page textarea:focus {
            border-color: #8B5E3C;
            box-shadow: 0 0 0 0.25rem rgba(139, 94, 60, 0.25);
        }

    /* Button */
    .edit-user-btn {
        width: 100%;
        height: 52px;
        background-color: #8B5E3C;
        color: #fff;
        border: none;
        border-radius: 14px;
        font-size: 17px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .edit-user-btn:hover {
            background-color: #D9A066;
            color: #3b2614;
            box-shadow: 0 8px 20px rgba(217,160,102,0.5);
        }

    /* Alert */
    .edit-user-page .alert-success {
        border-radius: 10px;
        text-align: center;
    }
</style>
