@model List<website.Models.Banner>
@{
    var pages = ViewBag.Pages as List<website.Models.PageContent> ?? new List<website.Models.PageContent>();
}

@await Html.PartialAsync("_header")

@if (Model != null && Model.Any())
{
    foreach (var banner in Model)
    {
        <div class="banner-box">
            <img src="@Url.Content(banner.ImageUrl)" class="banner-img" />
            <div class="banner-text">
                <h2>@ViewBag.Message</h2>
            </div>
        </div>
    }
}
else
{
    <h2 class="text-danger">
        No banners found OR Model is NULL
    </h2>
}



<div class="admin-cards">
