@model website.Models.Users


<div class="register-wrapper">
    <div class="register-card">

        <!-- LEFT PANEL -->
        <div class="left-panel">
            <div class="profile-wrapper">
                <img id="profilePreview"
                     src="@(string.IsNullOrEmpty(Model.ProfileImage) ? "/images/default-profile.png" : Model.ProfileImage)"
                     class="profile-preview"
                     alt="Profile Image">

                <p class="info-text">Upload your profile image</p>
                <a asp-action="Login" asp-controller="Form" class="register">Have an account? Login</a>
            </div>
        </div>

        <!-- RIGHT PANEL -->
        <div class="right-panel">
            <h1 class="title">More Info</h1>
            <form asp-action="SaveMoreInfo" asp-controller="Form" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id">

                <textarea asp-for="PostalAddress" placeholder="Postal Address"></textarea>
                <span asp-validation-for="PostalAddress" class="text-danger"></span>

                <input asp-for="Password" type="password" placeholder="Password">
                <span asp-validation-for="Password" class="text-danger"></span>

                <input asp-for="ConfirmPassword" type="password" placeholder="Confirm Password">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                <label>Profile Image:</label>
                <input type="file" name="ProfileImage" accept="image/*">

                <div class="terms">
                    <input type="checkbox" id="agree" />
                    <label for="agree">
                        I agree to
                        <a asp-controller="Form" asp-action="ViewPage" asp-route-id="6" target="_blank">Terms & Conditions</a>
                    </label>
                </div>

                <button type="submit" id="submitBtn" disabled>Submit</button>
            </form>

        </div>
    </div>
</div>

<script>
    const input = document.querySelector('input[name="ProfileImage"]');
    const preview = document.getElementById('profilePreview');

    input.addEventListener('change', function () {
        const file = this.files[0];
        if (file && preview) {
            preview.src = URL.createObjectURL(file);
        }
    });

    const agree = document.getElementById('agree');
    const submitBtn = document.getElementById('submitBtn');

    agree.addEventListener('change', function () {
        submitBtn.disabled = !this.checked;
    });
</script>

<style>
    /* ====================== GLOBAL THEME ====================== */
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #f4e1d2, #d9bfa1, #e9d4bc);
        margin: 0;
        padding: 0;
    }

    /* ====================== REGISTER WRAPPER ====================== */
    .register-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 20px;
    }

    /* ====================== REGISTER CARD ====================== */
    .register-card {
        display: flex;
        flex-direction: row;
        gap: 25px;
        width: 750px;
        max-width: 95%;
        padding: 35px;
        border-radius: 16px;
        background: #fff5e6;
        box-shadow: 0 12px 35px rgba(0,0,0,0.25);
        flex-wrap: wrap;
    }

    /* ====================== LEFT PANEL ====================== */
    .left-panel {
        flex: 1 1 45%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
    }

        .left-panel .profile-wrapper img {
            width: 130px;
            height: 130px;
            border-radius: 50%;
            object-fit: cover;
            border: 4px solid #c28f6e;
            box-shadow: 0 6px 18px rgba(0,0,0,0.25);
            margin-bottom: 15px;
            transition: transform 0.3s, box-shadow 0.3s;
        }

            .left-panel .profile-wrapper img:hover {
                transform: scale(1.05);
                box-shadow: 0 8px 22px rgba(0,0,0,0.3);
            }

        .left-panel .info-text {
            font-size: 14px;
            color: #8B5E3C;
            margin-bottom: 12px;
        }

    /* ====================== RIGHT PANEL ====================== */
    .right-panel {
        flex: 1 1 50%;
    }

        /* HEADERS */
        .right-panel .title {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 25px;
            color: #8B5E3C;
            text-align: center;
        }

        /* INPUTS & TEXTAREA */
        .right-panel input,
        .right-panel textarea,
        .right-panel input[type="file"] {
            width: 100%;
            padding: 12px 15px;
            margin-bottom: 15px;
            border-radius: 12px;
            border: 1.5px solid #c28f6e;
            font-size: 14px;
            outline: none;
            box-sizing: border-box;
            transition: border-color 0.3s, box-shadow 0.3s;
            background: #fff2e6;
        }

        .right-panel textarea {
            resize: vertical;
            min-height: 70px;
        }

            .right-panel input:focus,
            .right-panel textarea:focus {
                border-color: #8B5E3C;
                box-shadow: 0 0 12px rgba(139,94,60,0.3);
            }

        /* BUTTONS */
        .right-panel button,
        .register {
            width: 100%;
            padding: 13px 0;
            border: none;
            border-radius: 12px;
            font-size: 16px;
            font-weight: 700;
            cursor: pointer;
            transition: 0.3s;
            background: linear-gradient(135deg, #8B5E3C, #D9A066);
            color: #fff;
            margin-top: 12px;
        }

            .right-panel button:hover,
            .register:hover {
                transform: translateY(-2px);
                background: linear-gradient(135deg, #D9A066, #8B5E3C);
            }

    /* REGISTER LINK */
    .register {
        display: inline-block;
        padding: 10px 25px;
        font-size: 14px;
        font-weight: 700;
        text-decoration: none;
        border-radius: 10px;
        margin-top: 15px;
        transition: all 0.3s ease;
    }

    /* TERMS & CONDITIONS */
    .terms {
        text-align: left;
        font-size: 13px;
        margin: 10px 0 15px 0;
    }

        .terms input[type="checkbox"] {
            margin-right: 6px;
        }

        .terms a {
            color: #8B5E3C;
            text-decoration: underline;
            transition: color 0.3s;
        }

            .terms a:hover {
                color: #D9A066;
            }

    /* ALERTS */
    .alert-success,
    .alert-danger {
        border-radius: 10px;
        padding: 10px 12px;
        font-size: 14px;
        font-weight: 700;
        text-align: center;
        margin-bottom: 12px;
        box-shadow: 0 3px 8px rgba(0,0,0,0.2);
    }

    .alert-success {
        background-color: #D9A066;
        color: #fff;
    }

    .alert-danger {
        background-color: #c28f6e;
        color: #fff;
    }

    span.text-danger {
        font-size: 13px;
        color: #b33c00;
        margin-bottom: 6px;
        display: block;
    }

  
</style>
