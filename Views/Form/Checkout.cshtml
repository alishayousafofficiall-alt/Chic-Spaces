@model List<website.Models.Cart>
@await Html.PartialAsync("_header")
<h2>Checkout</h2>

<div class="checkout-container">
    <!-- Cart Items (Left) -->
    <div class="checkout-cart">
        <h3>Cart Items</h3>
        <table>
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Qty</th>
                    <th>Price</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Product.Name</td>
                        <td>@item.Quantity</td>
                        <td>Rs @item.Product.Price.ToString("N0")</td>
                        <td>Rs @(item.Quantity* item.Product.Price).ToString("N0")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Checkout Form (Right) -->
    <div class="checkout-form">
        <form asp-action="PlaceOrder" method="post">
            <div>
                <label>First Name</label>
                <input type="text" name="FullName" value="@ViewBag.UserFirstName" readonly />
            </div>
            <div>
                <label>Last Name</label>
                <input type="text" name="LastName" value="@ViewBag.UserLastName" readonly />
            </div>
            <div>
                <label>Email</label>
                <input type="email" name="Email" value="@ViewBag.UserEmail" readonly />
            </div>
            <div>
                <label>Address</label>
                <input type="text" name="Address" value="@ViewBag.UserAddress" />
            </div>
            <button type="submit">Place Order</button>
        </form>
    </div>
</div>

@await Html.PartialAsync("_footer")

<style>
    body {
        background: linear-gradient(135deg, #f4e1d2, #d9bfa1, #e9d4bc);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
        color: #4b3a2f;
    }

    h2 {
        color: #8B5E3C;
        text-align: center;
        margin: 25px 0;
    }

    /* Flex container for checkout */
    .checkout-container {
        display: flex;
        gap: 30px;
        max-width: 1100px;
        margin: 0 auto 50px auto;
        flex-wrap: wrap; /* For mobile responsiveness */
    }

    /* Cart styles */
    .checkout-cart {
        flex: 1 1 45%;
        background: #fff5e6;
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0 6px 18px rgba(0,0,0,0.1);
    }

        .checkout-cart h3 {
            text-align: left;
            color: #8B5E3C;
            margin-bottom: 15px;
        }

        .checkout-cart table {
            width: 100%;
            border-collapse: collapse;
        }

            .checkout-cart table thead {
                background: #8B5E3C;
                color: #fff;
            }

            .checkout-cart table th, .checkout-cart table td {
                padding: 10px;
                text-align: left;
            }

            .checkout-cart table tbody tr:nth-child(even) {
                background-color: #f9eee0;
            }

    /* Form styles */
    .checkout-form {
        flex: 1 1 45%;
        background: #f4e1d2;
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 6px 18px rgba(0,0,0,0.1);
    }

        .checkout-form form div {
            margin-bottom: 15px;
        }

        .checkout-form form label {
            display: block;
            font-weight: 600;
            margin-bottom: 5px;
            color: #5c4632;
        }

        .checkout-form form input[type="text"],
        .checkout-form form input[type="email"] {
            width: 100%;
            padding: 10px 12px;
            border-radius: 8px;
            border: 1px solid #d9bfa1;
            font-size: 1rem;
            background-color: #fff8f0;
            color: #3e2f1c;
            transition: all 0.3s ease;
        }

            .checkout-form form input[type="text"]:focus,
            .checkout-form form input[type="email"]:focus {
                outline: none;
                border-color: #8B5E3C;
                box-shadow: 0 0 8px rgba(139,94,60,0.3);
            }

        .checkout-form form button[type="submit"] {
            display: block;
            margin: 25px auto 0 auto;
            padding: 12px 25px;
            font-size: 1rem;
            font-weight: 600;
            border-radius: 8px;
            border: none;
            cursor: pointer;
            color: #fff;
            background: linear-gradient(135deg, #8B5E3C, #D9A066);
            transition: all 0.3s ease;
        }

            .checkout-form form button[type="submit"]:hover {
                background: linear-gradient(135deg, #D9A066, #8B5E3C);
                transform: translateY(-2px);
            }

   
   
</style>
