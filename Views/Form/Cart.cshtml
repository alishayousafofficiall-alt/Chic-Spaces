@model List<website.Models.Cart>
@{
    var pages = ViewBag.Pages as List<website.Models.PageContent> ?? new List<website.Models.PageContent>();
}
@await Html.PartialAsync("_header")
@{
    ViewData["Title"] = "Shopping Cart";
}

<h2 class="mb-4 text-center">Shopping Cart</h2>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">Your cart is empty.</div>
}
else
{
    <div class="table-responsive">
        <table class="cart-table table align-middle text-center">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="@item.Product.ImageUrl" alt="@item.Product.Name" class="cart-table-img" />
                        </td>
                        <td>@item.Product.Name</td>
                        <td>Rs @item.Product.Price.ToString("N0")</td>
                        <td>
                            <form asp-action="UpdateCart" method="post" class="d-flex justify-content-center align-items-center">
                                <input type="hidden" name="cartId" value="@item.Id" />
                                <input type="number" name="quantity" value="@item.Quantity" min="1" class="quantity-input me-2" />
                                <button type="submit" name="action" value="update" class="btn btn-primary btn-sm">Update</button>
                            </form>
                        </td>
                        <td>Rs @(item.Product.Price* item.Quantity).ToString("N0")</td>
                        <td>
                            <div class="d-flex justify-content-center gap-1">
                                <form asp-action="UpdateCart" method="post">
                                    <input type="hidden" name="cartId" value="@item.Id" />
                                    <button type="submit" name="action" value="increase" class="btn btn-success btn-sm">+</button>
                                </form>
                                <form asp-action="UpdateCart" method="post">
                                    <input type="hidden" name="cartId" value="@item.Id" />
                                    <button type="submit" name="action" value="decrease" class="btn btn-warning btn-sm">-</button>
                                </form>
                                <form asp-action="UpdateCart" method="post">
                                    <input type="hidden" name="cartId" value="@item.Id" />
                                    <button type="submit" name="action" value="remove" class="btn btn-danger btn-sm">Remove</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="4" class="text-end"><strong>Total:</strong></td>
                    <td colspan="2" class="text-center">
                        <strong>Rs @Model.Sum(i => i.Product.Price * i.Quantity).ToString("N0")</strong>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>

    <div class="text-end mt-3">
        <a asp-controller="Form" asp-action="Checkout" class="btn btn-lg checkout-btn">Proceed to Checkout</a>
    </div>
}

@await Html.PartialAsync("_footer")

<style>
    /* ====================== CART TABLE ====================== */
    .cart-table {
        background: #fff5e6;
        border-radius: 14px;
        box-shadow: 0 4px 15px rgba(139, 94, 60, 0.15);
        width: 100%;
        overflow: hidden;
    }

        .cart-table th {
            background: #D9A066;
            color: #4b3a2f;
            font-weight: 700;
            padding: 12px;
        }

        .cart-table td {
            padding: 12px;
            vertical-align: middle;
            color: #5b4636;
        }

        .cart-table tbody tr:hover {
            background: rgba(217, 160, 102, 0.1);
        }

    .cart-table-img {
        width: 80px;
        height: 80px;
        object-fit: cover;
        border-radius: 10px;
        border: 2px solid #D9A066;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .cart-table-img:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 15px rgba(139, 94, 60, 0.3);
        }

    /* ====================== QUANTITY INPUT ====================== */
    .quantity-input {
        max-width: 60px;
        border: 1.5px solid #c28f6e;
        border-radius: 8px;
        padding: 5px;
        text-align: center;
        outline: none;
        background: #fff2e6;
        transition: border-color 0.2s, box-shadow 0.2s;
    }

        .quantity-input:focus {
            border-color: #8B5E3C;
            box-shadow: 0 0 8px rgba(139, 94, 60, 0.3);
        }

    /* ====================== BUTTONS ====================== */
    .btn-primary {
        background: #8B5E3C;
        border: 1px solid #8B5E3C;
        color: #fff;
    }

        .btn-primary:hover {
            background: #D9A066;
            color: #4b3a2f;
        }

    .btn-success {
        background: #D9A066;
        border: 1px solid #D9A066;
        color: #4b3a2f;
    }

        .btn-success:hover {
            background: #8B5E3C;
            color: #fff;
        }

    .btn-warning {
        background: #c28f6e;
        border: 1px solid #c28f6e;
        color: #fff;
    }

        .btn-warning:hover {
            background: #8B5E3C;
            color: #fff;
        }

    .btn-danger {
        background: #b33c00;
        border: 1px solid #b33c00;
        color: #fff;
    }

        .btn-danger:hover {
            background: #8B5E3C;
            color: #fff;
        }

    /* ====================== CHECKOUT BUTTON ====================== */
    .checkout-btn {
        background: linear-gradient(135deg, #8B5E3C, #D9A066);
        color: #fff;
        font-weight: 700;
        border-radius: 10px;
        padding: 12px 25px;
        transition: all 0.3s ease;
    }

        .checkout-btn:hover {
            background: linear-gradient(135deg, #D9A066, #8B5E3C);
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(139, 94, 60, 0.3);
        }

</style>  