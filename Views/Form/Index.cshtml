    <div class="newsletter container my-5 text-center">
    <h1 class="section-heading">Subscribe to Our Newsletter</h1>
        <p>Get the latest updates, offers, and tips directly in your inbox.</p>
        <form id="newsletterForm">
            @Html.AntiForgeryToken()
            <input type="email" id="email" placeholder="Enter your email" required />
            <button type="submit">Subscribe</button>
        </form>
        <p id="msg" style="margin-top:10px;color:green;"></p>
    </div>



<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function() {
        $('#newsletterForm').on('submit', function(e) {
            e.preventDefault(); // prevent normal form submission

            var email = $('#email').val().trim();
            var token = $('input[name="__RequestVerificationToken"]').val();

            if(email === "") {
                $('#msg').css('color', 'red').text("Email is required!");
                return;
            }

            $.ajax({
                url: '@Url.Action("Subscribe", "Form")',
                type: 'POST',
                data: {
                    email: email,
                    __RequestVerificationToken: token
                },
                success: function(response) {
                    if(response.success) {
                        $('#msg').css('color', 'green').text(response.message);
                        $('#email').val(''); // clear input
                    } else {
                        $('#msg').css('color', 'red').text("Something went wrong.");
                    }
                },
                error: function(xhr) {
                    $('#msg').css('color', 'red').text(xhr.responseText);
                }
            });
        });
    });
</script>




