@if (sliders.Any())
{
    <div id="homeCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000">
        <div class="carousel-inner">
            @for (int i = 0; i < sliders.Count; i++)
            {
                var slider = sliders[i];
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    <img src="@Url.Content(slider.ImageUrl)" class="d-block w-100" alt="Slider Image" />
                </div>
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#homeCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#homeCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
}
else
{
    <p>No sliders available</p>
}
 

<!-- ================= CATEGORIES ================= -->
<h1 class="section-heading">Categories</h1>
<div class="categories-grid">
    @if (categories.Count > 0)
    {
        foreach (var category in categories)
        {
            <a asp-controller="Form" asp-action="Products" asp-route-categoryId="@category.Id" class="category-circle text-decoration-none text-center">
                <img src="@Url.Content(category.ImageUrl)" alt="@category.Name" class="category-img" />
                <div class="category-name">@category.Name</div>
            </a>
        }
    }
    else
    {
        <p class="text-center">No categories found.</p>
    }
</div>

<h1 class="section-heading">Trending Products</h1>
<div id="trendingCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="4000">
    <div class="carousel-inner">
        @for (int i = 0; i < trendingProducts.Count; i += 5)
        {
            <div class="carousel-item @(i == 0 ? "active" : "")">
                <div class="d-flex justify-content-between flex-wrap">
                    @for (int j = i; j < i + 5 && j < trendingProducts.Count; j++)
                    {
                        var product = trendingProducts[j];
                        <div class="trending-item card mb-3" style="width: 18%;">
                            <img src="@Url.Content(product.ImageUrl)" class="card-img-top" alt="@product.Name" />
                            <div class="card-body text-center">
                                <h6 class="card-title">@product.Name</h6>
                                <p class="card-text">₹@product.Price</p>
                                <a asp-controller="Form" asp-action="ProductDetails" asp-route-id="@product.Id" class="trending-btn">
                                    View Details
                                </a>


                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>





