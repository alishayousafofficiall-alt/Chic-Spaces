
<link rel="stylesheet" href="~/css/new.css" />
@inject website.Models.WebDbContext _Db
<footer>
    <div class="container">
        <div class="row">

            <!-- COMPANY INFO -->
            <div class="col-md-4 mb-4">
                <h5 class="fw-bold">Chic Spaces</h5>
                <p>Your trusted source for quality products and services.</p>
            </div>

                <!-- Optional Product Color -->
               

            <!-- QUICK LINKS -->
            <div class="col-md-4 mb-4">
                <h5 class="fw-bold">Quick Links</h5>
                <ul class="list-unstyled">
                    <li><a asp-controller="Form" asp-action="ViewPage" asp-route-id="8">Services</a></li>
                    <li><a asp-controller="Form" asp-action="ViewPage" asp-route-id="7">Return & Exchange</a></li>
                    <li><a asp-controller="Form" asp-action="ViewPage" asp-route-id="6">Terms & Conditions</a></li>
                    <li><a asp-controller="Form" asp-action="ViewPage" asp-route-id="3">Privacy Policy</a></li>
                </ul>
            </div>

            <!-- SOCIAL MEDIA -->
            <div class="col-md-4 mb-4">
                <h5 class="fw-bold">Follow Us</h5>
                <div class="social-icons">
                    <a href="https://www.facebook.com/" target="_blank"><i class="bi bi-facebook"></i></a>
                    <a href="https://www.instagram.com/" target="_blank"><i class="bi bi-instagram"></i></a>
                    <a href="https://twitter.com/" target="_blank"><i class="bi bi-twitter"></i></a>
                    <a href="https://www.linkedin.com/" target="_blank"><i class="bi bi-linkedin"></i></a>
                </div>
            </div>

        </div>

        <hr class="bg-light" />
        <div class="text-center">&copy; @DateTime.Now.Year Chic Spaces. All rights reserved.</div>
    </div>
</footer>  